/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run qbicsoftware/rnadeseq -profile test
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  // TODO qbicsoftware: Specify the paths to your test data on qbicsoftware/r-analysis-templates
  // TODO qbicsoftware: Give any required params for the test so that command line flags are not needed
  metadata = 'https://raw.githubusercontent.com/qbicsoftware/r-analysis-templates/master/DESeq2/input/Sample_preparations.tsv'
  rawcounts = 'https://raw.githubusercontent.com/qbicsoftware/r-analysis-templates/master/DESeq2/input/merged_gene_counts.txt'
  model = 'https://raw.githubusercontent.com/qbicsoftware/r-analysis-templates/master/DESeq2/input/design.txt'
  genelist = 'https://raw.githubusercontent.com/qbicsoftware/r-analysis-templates/master/DESeq2/input/requested_genes.txt'
  contrasts = 'https://raw.githubusercontent.com/qbicsoftware/r-analysis-templates/master/DESeq2/input/contrasts.tsv'
  fastqc = 'https://raw.githubusercontent.com/qbicsoftware/r-analysis-templates/master/rnaseqReport/fastqc.zip'
  config = 'https://raw.githubusercontent.com/qbicsoftware/r-analysis-templates/master/rnaseqReport/config.yml'
  summary = 'https://raw.githubusercontent.com/qbicsoftware/r-analysis-templates/master/rnaseqReport/summary.tsv'
  versions = 'https://raw.githubusercontent.com/qbicsoftware/r-analysis-templates/master/rnaseqReport/software_versions.csv'
  multiqc_stats = 'https://raw.githubusercontent.com/qbicsoftware/r-analysis-templates/master/rnaseqReport/MultiQC/multiqc_data/multiqc_general_stats.txt'
  multiqc_zip = 'https://github.com/qbicsoftware/r-analysis-templates/blob/master/rnaseqReport/MultiQC/multiqc.zip?raw=true'
}